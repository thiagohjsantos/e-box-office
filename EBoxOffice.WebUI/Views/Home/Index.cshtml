@model IEnumerable<EBoxOffice.Application.DTOs.EventDTO>

<div class="text-center">
    <img src="~/images/events.png" />
    <h2 class="display-4">Events Catalog</h2>
</div>

<div class="card-gallery">
    <div class="container-fluid">
        <div class="px-lg-5">
            <div class="row">
                @foreach (var item in Model)
                 {
                    <div class="card">
                        <img class="card-img-top" src="~/images/@Url.Content(item.Image?? "noimage.png")" alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
                            <p class="card-text">@Html.DisplayFor(modelItem => item.Description)</p>
                            <a class="btn btn-success" asp-controller="Events" asp-action="Buy"
                               asp-route-id="@item.Id">Buy Ticket</a>
                        </div>
                    </div>

                 }
            </div>
        </div>
    </div>
</div>